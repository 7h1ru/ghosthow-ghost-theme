{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Author Box and Posts --}}
<div class="container">
<div class="row"><br>

<div class="col-lg-8 col-lg-offset-2">

<div class="panel panel-default">
<div class="panel-body">
{{#foreach posts}}
<article class="{{post_class}}">
<ul class="list-group">
<li class="list-group-item">
<h2 class="title-home"><a href="{{url}}" title="{{title}}">{{title}}</a></h2><span class="home-meta">Posted By<img class="smallprofile" src="{{img_url author.profile_image absolute="true"}}" alt="Posts by {{name}}"/>{{#author}} <a href="{{url}}" rel="author">{{name}}</a>{{/author}} <span class="home-meta">on </span><time class="home-meta" datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format='Do MMMM YYYY'}}</time></span><br><br><p class="post-content p">{{excerpt characters="300"}}</p><hr>
</li>
    </ul>
</article>
{{/foreach}}

{{pagination}}

</div>
</div>
</div>
</div> 
</div> <!-- /.container -->
