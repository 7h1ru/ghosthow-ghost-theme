<br>
<div class="col-lg-10 col-lg-offset-1">

{{#get "posts" filter="tags:{{tags.[0].slug}}+id:-{{comment_id}}" limit="3" as |related_posts|}}
{{#if related_posts}}
<!-- Related Post -->
{{#foreach related_posts}}
<div class="row">
    <div class="col-md-4">
      <div class="thumbnail">
        <a href="{{url}}" target="_blank">
          <img src="{{img_url feature_image}}" alt="{{title}}" class="img-thumbnail img-responsive">
            </a>
                <div class="caption">
                    <p> <a href="{{url}}">{{title}}</a> </p>
                </div>
    </div>
</div>
{{/foreach}}
{{/if}}
{{/get}}

    </div>



