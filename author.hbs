{{!< default}}

{{#author}}

<div class="container">
<div class="row">
<div class="col-lg-6 col-lg-offset-3 text-center">
<br>	
<div class="media">
    <div class="media-left">
{{#if profile_image}}<img class="media-object" src="{{img_url profile_image}}" alt="{{name}}'s Picture" style="width:100px"/>{{/if}}
    </div>
    <div class="media-body text-left">
      <h4 class="media-heading">{{name}}</h4>
{{#if bio}}<p class="author-bio">{{bio}}</p>{{/if}}
    {{#if twitter}}<a href="{{twitter_url}}">{{twitter}}</a>{{/if}}

    </div>
</div>
</div>
</div>
<br />

{{/author}}

{{!-- The big featured header --}}
<div class="container">
<div class="row">
<div class="col-lg-10 col-lg-offset-1">
<div class="panel panel-default">
<div class="panel-body">
{{#foreach posts}}
<article class="{{post_class}}">
<ul class="list-group">
<li class="list-group-item">
<h2 class="title-home"><a href="{{url}}" title="{{title}}">{{title}}</a></h2><span class="home-meta">Posted By<img class="smallprofile" src="{{img_url author.profile_image absolute="true"}}" alt="Posts by {{name}}"/>{{#author}} <a href="{{url}}" rel="author">{{name}}</a>{{/author}} <span class="home-meta">on </span><time class="home-meta" datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format='Do MMMM YYYY'}}</time></span><br><br><p class="post-content p">{{excerpt characters="300"}}</p><hr>
</li>
    </ul>
</article>
{{/foreach}}

{{pagination}}

</div>
</div>
</div>
</div>
</div>
