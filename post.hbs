{{!< default}}
<link rel="stylesheet" href="assets/css/rrssb.css" />

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
 <div class="head-row">
<h1 class="post-head text-center">{{title}}</h1><br>

<section class="text-center">
<span class="post-author">
    <img class="authorimg author-img" src="{{img_url author.profile_image absolute="true"}}" alt="Posts by {{name}}"/>
Written by {{#author}}<a href="{{url}}" rel="author" class="not-active">{{name}}</a>{{/author}}</span>
{{#primary_tag}} <span class="post-author">in <a href="{{url}}">{{name}}</a></span>{{/primary_tag}} <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}"> on  {{date format="DD MMMM YYYY"}}</time>
    </section>
    </div>
<div class="container">
<div class="row">
   <div class="col-lg-10 col-lg-offset-1">
{{#if feature_image}}
	<img src="{{img_url feature_image}}" alt="{{title}}" class="img-rounded img-responsive" style="height:400px; width:100%;">
  {{/if}}
    </div>
<div class="col-lg-8 col-lg-offset-2">

<article class="{{post_class}}">

<hr>

<section class="post-content">
{{content}}
</section>
{{!-- Use this section to add ads in the bottom of post--}}
    <div class="media">
    <div class="media-left">
      <img src="{{img_url author.profile_image absolute="true"}}" class="media-object" alt="Posts by {{name}}" style="width:60px">
    </div>
    <div class="media-body">{{#author}}
      <h4 class="media-heading">{{name}}</h4>
      <p>{{bio}} <a href="{{url}}" rel="author" class="not-active">Readmore&rarr;</a></p>
    {{/author}}
    </div>
  </div>

<hr>
 <center>  
     <section class="social-share">
                {{> "social_share"}}
     </section>
     <section class="social-share">
                {{> "featured"}}
     </section> 
  </center>          
    
<br />
<br />

</article>
</div>
</div>
</div>
{{/post}}
